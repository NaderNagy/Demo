<h2>User</h2>
<p>
  <strong>Name:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Email:</strong>
  <%= @post.text %>
</p>
<hr>
<h2>Comments</h2>
<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
  </tr>
  <% @post.comments.each do |comment| %>
  <tr>
    <td><%= comment.commenter %></td>
    <td><%= comment.body %></td>
    <td><%= link_to 'Edit', [:edit,comment.post.user, comment.post, comment] %></td>
    <td><%= link_to 'Destroy', [comment.post.user, comment.post, comment],
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  </tr>

  <% end %>
</table>
<hr>
<h2>Add a comment:</h2>
<%= form_for([@user, @post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', user_path(@user) %>